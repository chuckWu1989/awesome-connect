{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "airbnb",
  "parserOptions": {
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "babel",
    "react",
    "promise",
    "jsx-a11y",
    "jest"
  ],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "react/jsx-filename-extension": ["warn", { "extensions": [".js"] }],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
